<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edt_background"
            android:padding="5dp"
            android:hint="Name"
            android:textColorHint="#187BCE"
            android:textStyle="bold"
            android:enabled="false"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#187BCE"/>

        <ImageView
            android:id="@+id/img_close"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0026"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_decription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:text="Decription"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_layout_decription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_decription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_background"
            android:textColorHint="#187BCE"
            android:textStyle="bold"
            android:textColor="#187BCE"
            android:textSize="15dp"
            android:enabled="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/txt_unit_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Unit Increase"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_unit_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edt_background"
            android:padding="5dp"
            android:textColorHint="#187BCE"
            android:textColor="#187BCE"
            android:textStyle="bold"
            android:hint="1"
            android:enabled="false"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="33dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/txt_time_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Time Range"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_time_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edt_background"
            android:padding="5dp"
            android:textColorHint="#187BCE"
            android:textColor="#187BCE"
            android:textStyle="bold"
            android:enabled="false"
            android:hint="Morning"
            android:text=""
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="35dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/txt_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Reminders"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edt_background"
            android:padding="5dp"
            android:hint="5:00"
            android:textColor="#187BCE"
            android:textColorHint="#187BCE"
            android:textStyle="bold"
            android:enabled="false"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginStart="110dp"
            android:layout_marginEnd="37dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_reminder_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:text="Reminders Message"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_layout_reminder_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_reminder_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_background"
            android:textSize="18dp"
            android:textColor="#187BCE"
            android:textStyle="bold"
            android:enabled="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/txt_habit_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Habit Term"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_start_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edt_background"
            android:padding="5dp"
            android:textColorHint="#187BCE"
            android:textColor="#187BCE"
            android:textStyle="bold"
            android:hint="02/03/2024"
            android:enabled="false"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----->"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/edt_end_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edt_background"
            android:padding="5dp"
            android:textColorHint="#187BCE"
            android:textColor="#187BCE"
            android:textStyle="bold"
            android:hint="03/03/2024"
            android:enabled="false"
            android:textSize="18dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/txt_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Goal/Goal Period"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="-20dp">

        <EditText
            android:id="@+id/edt_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edt_background"
            android:padding="5dp"
            android:textColorHint="#187BCE"
            android:textColor="#187BCE"
            android:textStyle="bold"
            android:hint="10"
            android:enabled="false"
            android:textSize="18dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/edt_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edt_background"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:textColorHint="#187BCE"
            android:textColor="#187BCE"
            android:textStyle="bold"
            android:hint="km"
            android:enabled="false"
            android:textSize="18dp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="30dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/edt_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edt_background"
            android:padding="5dp"
            android:hint="Day"
            android:textColorHint="#187BCE"
            android:textColor="#187BCE"
            android:textStyle="bold"
            android:enabled="false"
            android:textSize="18dp"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>
